                                <label class="control-label " for="student-name-id">Name</label>
                            </div>
                            <label class="col-sm-1">:</label>

                            <div class="col-sm-8">
                                <span class="form-control-static" id="student-name-id">Abhishek Bhardwaj</span>
                            </div>
